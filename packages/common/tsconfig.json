{
  "extends": "@ts-inference/typescript-config/base.json",
  "include": ["."],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src",
    "target": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
